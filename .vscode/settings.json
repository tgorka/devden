{
  // Editor behavior settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File handling settings
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/dist": true
  },

  // Language-specific formatting
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Workspace appearance
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.activeIconPack": "react",

  // Code navigation and quality tools
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "NOTE"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#ffffff",
    "background": "#ffbd2a",
    "icon": "alert",
    "rulerColour": "#ffbd2a",
    "type": "text"
  },
  "bookmarks.saveBookmarksInProject": true,
  "color-highlight.markerType": "underline",

  // Markdown configuration
  "markdownlint.config": {
    "default": true,
    "MD024": false,
    "MD025": false,
    "MD033": false
  },

  // API development tools
  "rest-client.previewResponseInUntitledDocument": true,
  "rest-client.enableTelemetry": false,

  // Development servers
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Diagram tools
  "hediet.vscode-drawio.theme": "automatic",

  // Git configuration
  "git-graph.date.format": "Date & Time",

  // Collaboration settings
  "liveshare.presence": true,

  // Common words for spell checking
  // Consider periodically reviewing this list to remove unnecessary entries
  "cSpell.words": [
    "autoremove",
    "devcontainers",
    "devden",
    "dpkg",
    "eslint",
    "getent",
    "githubcli",
    "ipython",
    "keyrings",
    "kubernetes",
    "libbz",
    "libncurses",
    "libncursesw",
    "libreadline",
    "libsqlite",
    "linuxbrew",
    "miniconda",
    "minikube",
    "noninteractive",
    "nvm",
    "ohmyzsh",
    "procps",
    "pylint",
    "pytest",
    "rsvm",
    "sdkman",
    "setuptools",
    "shellenv",
    "tgorka",
    "usermod",
    "venv",
    "vscode"
  ]
}
